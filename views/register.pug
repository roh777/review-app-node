extends layout

block content
    .inner
        form.form(action="/register" method="POST")
            h2 Register
            label(for="name") Name
            input(type="text" name="name" value=(body &&body.name)? body.name : ``)
            label(for="email") Email
            input(type="email" name="email" value=(body && body.email)? body.email : ``)
            label(for="password") Password
            input(type="password" name="password")
            label(for="passwordconfirm") Password Confirm
            input(type="password" name="passwordconfirm" )
            input.button(type="submit" value="Register")